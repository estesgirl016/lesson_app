<h1> <%= @user_id.name %> - All Lessons </h1>

<% if @lessons.any? %>
  <!-- loop the lessons and display them -->
  <ul>
    <% @lessons.each do |car| %>
      <li class='car-info-text'> <%= car.info %> - <%= link_to 'Show', person_car_path(@person, car) %> </li>
    <% end %>
  </ul>
<% else %>
  <!-- display no lessons message -->
  <h3>No Lessons, Please Create One.</h3>
<% end %>

<%= link_to 'New Lesson', new_person_lessson_path(@user_id) %>



