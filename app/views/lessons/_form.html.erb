<%= form_for [@user, @lesson], url: new_lesson_path do |f| %>

  <%= f.label :lesson_date %>
  <%= f.date_field :lesson_date, required: true %>

  <br />
  <%= f.label :feedback %>
  <%= f.text_field :feedback %>

  <br />
  <%= f.label :notes %>
  <%= f.text_field :notes %>

  <br />
  <%= f.submit %>
  
<% end %>