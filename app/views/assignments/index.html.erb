<h3> <%= @user.first_name %>'s Assignments </h3>

  <% if @user.teacher? %>
    <%= link_to 'New Assignment', new_assignment_path(@lesson) %>
  <% end %> 
  <% if @lesson.assignments.empty? %>
    <p>This Student Currently Has No Assignments!</p> 
  <% end %>  
  <ul>
  <% @assignments.each do |assignment| %>
    <li>
    <%= assignment.book %>
    <% if @user.teacher? %>
      <%= link_to 'Edit Assignment', assignment_path(@lesson.id, assignment) %>
      <%= link_to 'Delete Assignment', delete_assignment_path(assignment), method: :delete %>
    <% else %>
      <i class="large material-icons">star</i> 
      <%= link_to 'Practiced', practice_path(assignment) %>  
    <% end %>
    </li> 
  <% end %>
