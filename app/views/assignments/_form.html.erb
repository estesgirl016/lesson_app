

<%= form_for [@lesson, @assignment] do |f| %>
  <%= f.label :book %><br />
  <%= f.text_field :book %>
<br />
  <%= f.label :title %><br />
  <%= f.text_field :title %>
<br />
  <%= f.label :page %><br />
  <%= f.number_field :page %>
<br />
  <%= f.label :per_day %><br />
  <%= f.number_field :per_day %>
<br />
  <%= f.label :days_per_week %><br />
  <%= f.number_field :days_per_week %>
